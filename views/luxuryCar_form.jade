extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='model') Model:
      input#name.form-control(type='text', placeholder='Corsa, Aventador etc.' name='model' required value=(undefined===luxuryCar ? '' : luxuryCar.model) )
      label(for='manufacturer') Manufacturer:
      input#name.form-control(type='text', placeholder='Vauxhall, Lamborghini etc.' name='manufacturer' required value=(undefined===luxuryCar ? '' : luxuryCar.manufacturer) )
      label(for='Type') Type:
      input#name.form-control(type='text', placeholder='Hatchback, Coupe etc.' name='type' required value=(undefined===luxuryCar ? '' : luxuryCar.type) )
      label(for='Engine') Engine:
      input#name.form-control(type='text', placeholder='2.4l I4, 6l v12 etc.' name='engine' required value=(undefined===luxuryCar ? '' : luxuryCar.engine) )
      label(for='Power') Power in Hsp:
      input#name.form-control(type='text', placeholder='200, 600 etc.' name='power' required value=(undefined===luxuryCar ? '' : luxuryCar.power) )
      label(for='Price') Price In Â£:
      input#name.form-control(type='text', placeholder='10000, 300000 etc.' name='price' required value=(undefined===luxuryCar ? '' : luxuryCar.price) )
      label(for='Stock') Stock:
      input#name.form-control(type='text', placeholder='1, 2 etc.' name='stock' required value=(undefined===luxuryCar ? '' : luxuryCar.stock) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
